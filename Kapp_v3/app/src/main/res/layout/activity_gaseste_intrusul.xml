<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp"
    tools:context=".GasesteIntrusulActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- TextView pentru întrebarea principală -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cuvant_intrus"
            android:fontFamily="@font/bungee"
            android:textSize="30sp"
            android:textColor="#6AC19B"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="8dp"
            android:padding="16dp"/>

        <!-- Butoanele pentru opțiuni -->
        <Button
            android:id="@+id/btnOption1"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:padding="8dp"
            android:text="Balon"
            android:backgroundTint="#47BAE4"
            android:fontFamily="@font/bungee"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnOption2"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:padding="8dp"
            android:text="Minge"
            android:backgroundTint="#47BAE4"
            android:fontFamily="@font/bungee"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnOption3"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:padding="8dp"
            android:text="Pix"
            android:backgroundTint="#47BAE4"
            android:fontFamily="@font/bungee"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginBottom="8dp" />

        <!-- TextView pentru afișarea rezultatului -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:fontFamily="@font/bungee"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</RelativeLayout>